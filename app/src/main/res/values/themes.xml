<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlackAce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryLight</item>
        <item name="colorOnSecondary">@color/colorBackground</item>
        <item name="colorOnSurface">@color/textColorPrimary</item>
        <item name="background">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorBackgroundFloating">@color/colorBackground</item>
        <item name="popupMenuBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:editTextColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>

        <item name="md_color_title">@color/textColorPrimary</item>
        <item name="md_color_content">@color/textColorSecondary</item>
        <item name="md_color_button_text">@color/textColorPrimary</item>

        <item name="textInputStyle">@style/AceTextInputStyle</item>
    </style>

    <style name="AceTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textinput_storke_color</item>
        <item name="hintTextColor">@color/textinput_storke_color</item>
        <item name="android:textColorHint">@color/textinput_storke_color</item>
    </style>

</resources>
